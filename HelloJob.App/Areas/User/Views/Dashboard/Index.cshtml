
@if (TempData["update"] != null)
{
    <div id="update" style="display:none">@TempData["update"]</div>
}

<div class="account_body">
    <div class="my-profile">
        <div class="my-profile__head">
            <h1 class="my-profile__name">Xoş gəlmisiniz, @User.Identity.Name</h1>
            <p>Hellojob.az</p>
        </div>
        <div class="row">
            @if (User.IsInRole("Owner"))
            {
                <div class="col-lg-3 col-md-6">
                    <a class="my-profile__item" asp-controller="vacancy" asp-action="create">
                        <div class="my-profile__item__icon"> 
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/building.svg" alt="" />
                        </div>
                        <h2 class="my-profile__item__name">Vakansiya Yerləşdir</h2>
                    </a>
                </div>
            }
            else
            {
                <div class="col-lg-3 col-md-6">
                    <a class="my-profile__item" asp-action="Create" asp-controller="Resume">
                        <div class="my-profile__item__icon">
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user-check.svg" alt="" />
                        </div>
                        <h2 class="my-profile__item__name">CV yerləşdir</h2>
                    </a>
                </div>
            }

            <div class="col-lg-3 col-md-6">
                <a class="my-profile__item" asp-action="index" asp-controller="resume">
                    <div class="my-profile__item__icon">
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/share.svg" alt="" />
                    </div>
                    <h2 class="my-profile__item__name">Elanlarım</h2>
                </a>
            </div>
            <div class="col-lg-3 col-md-6">
                <a class="my-profile__item" href="./WishListpage.html">
                    <div class="my-profile__item__icon">
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/check-heart.svg" alt="" />
                    </div>
                    <h2 class="my-profile__item__name">Bəyəndiklərim</h2>
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

        const data5 = document.getElementById("update");
        if (data5 != undefined) {
            const Toast = Swal.mixin({
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 6000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.onmouseenter = Swal.stopTimer;
                    toast.onmouseleave = Swal.resumeTimer;
                }
            });
            Toast.fire({
                icon: "warning",
                title: "updated"
            });
        }

    </script>
}
