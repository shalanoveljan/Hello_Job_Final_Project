
@model List<ResumeGetDto>
<div class="create_cv">
    <div class="title">
        <h1>Elanlarim</h1>
        <ul class="profile__add-cv__parts">
            <li class="active">
                <a href="#tab1" class="tab1 step_btn">Cv-lər(1)</a>
            </li>
            <li class="active d-none">
                <a href="#tab1" class="tab1 step_btn">Vakansiyalar(1)</a>
            </li>
        </ul>
    </div>
    <div class="inner_tab">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    
                <div class="col-lg-12 ">
                    <div class="user_block">
                        <a asp-area="" asp-controller="resume" asp-action="detail" asp-route-id="@item.Id" target="_blank">
                            <div class="header_user">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="user_img">
                                        <img src="~/assets/images/resumes/@item.Image"
                                             alt="" />
                                    </div>
                                    <div class="d-flex justify-content-between w-100">
                                        <div class="user_desc">
                                            <h3 class="profession">
                                                @item.Category.Name
                                            </h3>

                                            <p class="fullname">@item.Name @item.Surname</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="user_options">
                                <div class="item">
                                    <div class="icon">
                                        <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/user-clock.svg"
                                             alt="" />
                                    </div>
                                    <div class="text">
                                        <h4>@item.Mode</h4>
                                        <p>İş rejimi</p>
                                    </div>
                                </div>
                                <div class="item">
                                    <div class="icon">
                                        <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/money.svg"
                                             alt="" />
                                    </div>
                                    <div class="text">
                                        <h4>@item.Salary</h4>
                                        <p>Minimum əmək haqqı AZN</p>
                                    </div>
                                </div>
                                <div class="item">
                                    <div class="icon">
                                        <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                                             alt="" />
                                    </div>
                                    <div class="text">
                                        <h4>@item.Experience il</h4>
                                        <p>İş staji</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <div class="user_buttons">
                            <a asp-controller="resume" asp-action="update" asp-route-id="@item.Id" class="edited btn">
                                <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/edit.svg"
                                     alt="" />
                                <span>Redaktə et</span>
                            </a>
                                <a class="deleted btn" asp-controller="resume" asp-action="Remove" asp-route-id="@item.Id">
                                <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/delete.svg"
                                     alt="" />
                                <span>Sil</span>
                            </a>  
                        </div>
                    </div>
                </div>
                }
               
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/HelloJobPanel/assets/js/pageCv.js"></script>
   }
