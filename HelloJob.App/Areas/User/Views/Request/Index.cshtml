
@model IList<RequestGetDto>

<div class="create_cv">
    <div class="inner_tab">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-lg-12 ">
                    <div class="user_block">
                        <a asp-area="" asp-controller="Resume" asp-action="detail" asp-route-id="@item.Resume.Id" target="_blank">
                            <div class="header_user">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="user_img">
                                        <img src="~/assets/images/Resumes/@item.Resume.Image"
                                             alt="" />
                                    </div>
                                    <div class="d-flex justify-content-between w-100">
                                        <div class="user_desc">
                                            <h3 class="profession">
                                                @item.Resume.Category.Name
                                            </h3>

                                                <p class="fullname">@item.Resume.Name @item.Resume.Surname</p>
                                                <h4 class="profession">
                                                   Company: @item.Vacancy.Company.Name
                                                </h4>
                                                <p class="fullname">Position: @item.Vacancy.Position</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="user_options">
                                <div class="item">
                                    <div class="icon">
                                        <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/user-clock.svg"
                                             alt="" />
                                    </div>
                                    <div class="text">
                                        <h4>@item.Resume.Mode</h4>
                                        <p>İş rejimi</p>
                                    </div>
                                </div>
                                <div class="item">
                                    <div class="icon">
                                        <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/money.svg"
                                             alt="" />
                                    </div>
                                    <div class="text">
                                        <h4>@item.Resume.Salary AZN</h4>
                                        <p>Minimum əmək haqqı AZN</p>
                                    </div>
                                </div>
                                <div class="item">
                                    <div class="icon">
                                        <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                                             alt="" />
                                    </div>
                                    <div class="text">
                                        <h4>@item.Resume.Experience il</h4>
                                        <p>İş staji</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <div class="user_buttons">
                            <a  class="deleted btn" asp-controller="request" asp-action="remove" asp-route-id="@item.Id">
                                <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/delete.svg"
                                     alt="" />
                                <span>Sil</span>
                            </a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/HelloJobPanel/assets/js/pageCv.js"></script>
}
