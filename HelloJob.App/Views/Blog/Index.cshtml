
@model PagginatedResponse<BlogGetDto>
<main>

    <div class="breadcrumbs-new pb-0">
        <a href="/">Əsas səhifə</a>
        <span>/</span>
        <a href="/blog/">Bloqlar</a>
        </div>


      <div class="page-title-center-container">
            <h2 class="page-title">Bloqlar</h2>
      </div>

      <div class="section-component">
        <div class="container">
            <div class="sc-title-container">
                <h4 class="sc-title">Son bloq yazıları</h4>
                </div>
                <div class="last-blog-cards">
                   @foreach (var item in Model.Datas.OrderByDescending(x=>x.CreatedAt).Take(3))
                {
                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="new-blog-item big-blog-item">
                <div class="nbi-image">
                <img loading="lazy" src="~/assets/images/blogs/@item.Image">
                </div>
                <div class="nbi-information">
                            <span class="nbi-time">@item.CreatedAt.ToString("dd MMMM  yyyy")</span>
                <h4 class="nbi-title">
                @item.Title <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M7 17L17 7M17 7H7M17 7V17" stroke="#101828" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                </h4>
                <div class="n-blog-content">
                @item.smallDescription</div>
                </div>
                </a>
                }
