        <div class="section-component all-blogs-container">
           <div class="container">
            <div class="sc-title-container">
                <h4 class="sc-title">Bütün yazılar</h4>
                </div>
                <div class="all-blog-cards">
                    @foreach (var item in Model.Datas)
                {
                    
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="new-blog-item ">
                <div class="nbi-image">
                <img loading="lazy" src="~/assets/images/blogs/@item.Image">
                </div>
                <div class="nbi-information">
                            <span class="nbi-time">@item.CreatedAt.ToString("dd MMMM  yyyy")</span>
                <h4 class="nbi-title">
                @item.Title <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
